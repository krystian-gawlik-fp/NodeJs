{
  "entryFile": "src/app.ts",
  "noImplicitAdditionalProperties": "throw-on-extras",
  "controllerPathGlobs": ["src/controllers/*.ts"],
  "spec": {
    "outputDirectory": "src",
    "specVersion": 3,
    "securityDefinitions": {
      "jwt": {
        "type": "apiKey",
        "name": "authorization",
        "in": "header"
      }
    }
  },
  "routes": {
    "authenticationModule": "src/middlewares/authentication.ts",
    "routesDir": "src/routes"
  },
  "swagger": {
    "outputDirectory": ".",
    "entryFile": "src/app.ts"
  }
}
